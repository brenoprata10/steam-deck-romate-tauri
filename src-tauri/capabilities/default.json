{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "clipboard-manager:allow-read-text",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://www.steamgriddb.com/api/v2*" }]
    }
  ]
}
